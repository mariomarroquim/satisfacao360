<div class="panel panel-default">
  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {role: "form"}) do |f| %>
      <%= bootstrap_devise_error_messages! %>

      <div class="form-group required">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div id="devise-form-actions">
        <%= f.submit "Cadastrar", class: "btn btn-primary hidden-xs" %>
        <%= f.submit "Cadastrar", class: "btn btn-primary btn-block visible-xs-block" %>

        <span class="hidden-xs">&nbsp;</span>

        <div class="visible-xs-block">&nbsp;</div>

        <%= link_to "Já se cadastrou? Entrar", new_session_path(resource_name), class: "btn btn-success hidden-xs" %>
        <%= link_to "Já se cadastrou? Entrar", new_session_path(resource_name), class: "btn btn-success btn-block visible-xs-block" %>

        <div class="visible-xs-block">&nbsp;</div>

        <%#= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "btn btn-default pull-right hidden-xs" %>
        <%#= link_to "Esqueceu a senha?", new_password_path(resource_name), class: "btn btn-default btn-block visible-xs-block" %>

        <%= link_to "Esqueceu a senha?", "#", class: "btn btn-default pull-right hidden-xs" %>
        <%= link_to "Esqueceu a senha?", "#", class: "btn btn-default btn-block visible-xs-block" %>
      </div>
    <% end %>
  </div>
</div>
